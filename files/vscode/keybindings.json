[
    { "key": "shift+cmd+h",           "command": "workbench.action.replaceInFiles" },
    // Ensure that tab switching doesn't show a picker by default
    { "key": "ctrl+tab",              "command": "workbench.action.nextEditor" },
    { "key": "ctrl+shift+tab",        "command": "workbench.action.previousEditor" },
    { "key": "alt+cmd+right",         "command": "workbench.action.openNextRecentlyUsedEditorInGroup" },
    { "key": "alt+cmd+left",          "command": "workbench.action.openPreviousRecentlyUsedEditorInGroup" },

    // Add a shortcut to allow easy focus switching between the editor and terminal
    { "key": "ctrl+.",                "command": "workbench.action.terminal.focus" },
    { "key": "ctrl+.",                "command": "workbench.action.focusActiveEditorGroup",
                                      "when": "terminalFocus" },

    // Ensure that page up and page down work in the integrated Terminal
    { "key": "pagedown",              "command": "workbench.action.terminal.scrollDownPage",
                                      "when": "terminalFocus" },
    { "key": "pageup",                "command": "workbench.action.terminal.scrollUpPage",
                                      "when": "terminalFocus" },
]
